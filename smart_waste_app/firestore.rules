rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check user's zone
    function getUserZone() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.zoneId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can create their own profile during signup
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can update their own profile (limited fields)
      allow update: if isAuthenticated() && request.auth.uid == userId
                    && (!request.resource.data.diff(resource.data).affectedKeys()
                        .hasAny(['role'])); // Can't change own role
      
      // Admins can read all users
      allow read: if isAdmin();
      
      // Admins can update any user
      allow update: if isAdmin();
    }
    
    // Zones collection
    match /zones/{zoneId} {
      // All authenticated users can read zones
      allow read: if isAuthenticated();
      
      // Only admins can create/update/delete zones
      allow create, update, delete: if isAdmin();
    }
    
    // Schedules collection
    match /schedules/{scheduleId} {
      // Residents can only read schedules for their zone
      allow read: if isAuthenticated() && 
                  (resource.data.zoneId == getUserZone() || isAdmin());
      
      // Admins can read all schedules
      allow read: if isAdmin();
      
      // Only admins can create/update/delete schedules
      allow create, update, delete: if isAdmin();
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      // Users can read notifications for their zone
      allow read: if isAuthenticated() && 
                  (resource.data.zoneId == getUserZone() || isAdmin());
      
      // Users can mark their zone's notifications as read
      allow update: if isAuthenticated() && 
                    resource.data.zoneId == getUserZone() &&
                    request.resource.data.diff(resource.data).affectedKeys()
                        .hasOnly(['isRead']);
      
      // Only admins or cloud functions can create notifications
      allow create: if isAdmin();
      
      // Only admins can delete notifications
      allow delete: if isAdmin();
    }
  }
}
